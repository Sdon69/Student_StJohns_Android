<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLayout"
    android:padding="0dp"
    android:layout_margin="0dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/filterBar"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp">


            <Spinner
                android:id="@+id/spinner_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/genre_arrays"
                android:prompt="@string/country_prompt"
                android:layout_marginTop="20dp"



                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            >



            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#80f8fcff"
                android:onClick="onChangeDept"
                android:text="Filter"
                android:textColor="#f8fcff" />


        </LinearLayout>

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFFFFF" />

    <ProgressBar

        android:id="@+id/loadingCircle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listinflater"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_above="@+id/navbar"

            >

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:dividerHeight="26dp"
                android:scrollbars="none"
                android:divider="#00000000"

                />


        </LinearLayout>


        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/mainmenuui"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>