<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:id="@+id/mLayout"
    android:background="#fff">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"><!-- Put height to wrap content in case of any problem -->








                    <LinearLayout
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/border"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Department"
                            android:textColor="#4489c8"
                            android:textSize="16sp"
                            />


                        <Spinner
                            android:id="@+id/spinner_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/dept_arrays2"
                            android:prompt="@string/country_prompt"
                            android:layout_below="@+id/question"


                            android:layout_above="@+id/textView" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Semester"
                            android:textColor="#4489c8"
                            android:textSize="16sp"

                            />


                        <Spinner
                            android:id="@+id/spinner_semesters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/semester_arrays2"
                            android:prompt="@string/country_prompt"


                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Class"
                            android:textColor="#4489c8"
                            android:textSize="16sp"

                            />


                        <Spinner
                            android:id="@+id/spinner_class"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/class_arrays2"
                            android:prompt="@string/country_prompt"


                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Section"
                            android:textColor="#4489c8"
                            android:textSize="16sp"
                            />


                        <Spinner
                            android:id="@+id/spinner_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/section_arrays2"
                            android:prompt="@string/country_prompt"


                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:onClick="onClickOk"
                            android:padding="12dp"
                            android:text="OK"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorAccent"
                            android:id="@+id/textView" />





                    </LinearLayout></ScrollView></LinearLayout>