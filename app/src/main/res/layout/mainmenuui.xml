<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_border"
        android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickAttendance"
                android:orientation="vertical"


                >

                <ImageView
android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:id="@+id/attendance"
                    android:src="@drawable/attendance"
                    />

                

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickAnnouncement"
                android:orientation="vertical"


                >

                <ImageView
android:layout_width="match_parent"
                    android:layout_height="match_parent"
              android:padding="10dp"
                    android:id="@+id/announcement"
                    android:src="@drawable/announcements" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickNotes"
                android:orientation="vertical"

                >

                <ImageView
android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
              android:padding="10dp"
                    android:id="@+id/notes"
                    android:src="@drawable/notes" />



            </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickEvents"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/events"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
      android:padding="10dp"
            android:src="@drawable/events" />


    </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickProfile"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile"
                    android:src="@drawable/newsfeed"
              android:padding="10dp"/>

            

            </LinearLayout>


    </LinearLayout>


