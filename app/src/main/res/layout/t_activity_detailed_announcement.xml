<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
 >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/navbar"



        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

           >
            <ImageView
                android:layout_width="106dp"
                android:layout_height="56dp"
                android:src="@drawable/sjc"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/School"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="St Johns"
                android:padding="0dp"
                android:textColor="#2b8de4"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/detailedlaytitle"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Introduction to Management"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#555555"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/publisher"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Prateek Singh"
                android:textColor="#555555"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:layout_marginTop="4dp">

                <!--   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"

                       android:text="Dated : "
                       android:textColor="#2f5597"
                       /> -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="21/12/17"
                    android:id="@+id/date"
                    android:textColor="#2f5597"
                    android:layout_marginRight="8dp"
                    />
            </LinearLayout>



            <View android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:layout_marginTop="16dp"
                android:background="#2b8de4"
                android:layout_marginLeft="78dp"
                android:layout_marginRight="78dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/detailedlaydesc"
                android:padding="16dp"

                android:lineSpacingMultiplier="1.5"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webViewLayout">

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Fullscreen [ + ]"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:background="#433f8acd"
                    android:padding="4dp"
                    android:id="@+id/fullscreenButton"
                    android:onClick="onClickFullScreen"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download [ â†“ ] "
                    android:onClick="onClickDownload"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:background="#433f8acd"
                    android:padding="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/fullscreenButton"
                    />
            </RelativeLayout>

        </LinearLayout></ScrollView>
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/mainmenuui"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
</LinearLayout>