<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLayout"
    android:padding="0dp"
    android:layout_margin="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp">


            <Spinner
                android:id="@+id/spinner_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/genre_arrays"
                android:prompt="@string/country_prompt"
                android:layout_marginTop="20dp"



                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            >



            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#80f8fcff"
                android:onClick="onChangeDept"
                android:text="Filter"
                android:textColor="#f8fcff" />


        </LinearLayout>

    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFFFFF" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_above="@+id/navbar"

            >

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:dividerHeight="26dp"
                android:scrollbars="none"
                android:divider="#00000000"

                />


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navbar"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"

            android:onClick="onClickPlus"
            android:src="@drawable/plusfloat"
            android:background="@drawable/empty"

            app:fabSize="normal"
            />
        <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/mainmenuui"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
</LinearLayout>