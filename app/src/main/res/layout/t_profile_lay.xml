<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLayout"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/navbar"
            android:scrollbars="none">
            <!-- Put height to wrap content in case of any problem -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <!--   <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="106dp"
              android:background="@drawable/bg23">


             <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:padding="8dp"
                  android:src="@drawable/signup_circle"

                        />
                </RelativeLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="#203f8acd"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"

                            android:text="First Name"


                            android:textColor="#4489c8"

                            />

                        <TextView
                            android:id="@+id/pFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="First Name"
                            android:textColor="#4489c8"
                            android:textStyle="bold"


                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="#203f8acd"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Last Name"
                            android:textColor="#4489c8"

                            />

                        <TextView
                            android:id="@+id/pLastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Last Name"
                            android:textColor="#4489c8"
                            android:textStyle="bold"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="#203f8acd"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="User Id"
                            android:textColor="#4489c8"


                            />

                        <TextView
                            android:id="@+id/pUser_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="User Id"
                            android:textColor="#4489c8"
                            android:textStyle="bold"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="#203f8acd"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Email"
                            android:textColor="#4489c8"

                            />

                        <TextView
                            android:id="@+id/pEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Email"
                            android:textColor="#4489c8"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="#203f8acd"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Phone Number"
                            android:textColor="#4489c8"

                            />

                        <TextView
                            android:id="@+id/pPhoneNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Phone Number"
                            android:textColor="#4489c8"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"


                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#203f8acd">


                            <TextView
                                android:id="@+id/pPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onClickChangePassword"
                                android:padding="14dp"
                                android:text="Change Password "
                                android:textColor="#4489c8"


                                />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navbar"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/empty"
            android:onClick="onClickintro"
            android:src="@drawable/pencil2"
            app:fabSize="normal" />

       <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/mainmenuui"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>


</LinearLayout>