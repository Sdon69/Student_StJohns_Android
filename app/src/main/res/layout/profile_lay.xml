<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/navbar"><!-- Put height to wrap content in case of any problem -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:background="@drawable/bg23">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/signup_circle"

                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"

                android:background="#203f8acd"
                android:orientation="horizontal"
                android:padding="14dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:text="First Name"


                    android:textColor="#4489c8"

                    />

                <TextView
                    android:id="@+id/pFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="First Name"
                    android:textColor="#4489c8"
                    android:textStyle="bold"


                    />



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/whatDepartment"
                android:layout_width="220dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/border"
                android:visibility="gone"
                android:padding="8dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/question"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:padding="6dp"
                    android:text="What's Your Department?"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:entries="@array/dept_arrays2"
                    android:prompt="@string/country_prompt"
                    android:layout_below="@+id/question"


                    android:layout_above="@+id/textView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:onClick="onClickOk"
                    android:padding="12dp"
                    android:text="OK"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView" />

            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_alignParentLeft="true"
            android:textColor="#4489c8"
           
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pLastName"
            android:text="Last Name"
            android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
            
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
                   android:layout_alignParentLeft="true"          android:textColor="#4489c8"
          

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pUser_id"
            android:text="User Id"
            android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
            
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:layout_alignParentLeft="true"
            android:textColor="#4489c8"

            
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pClass"
            android:text="Class"
            android:layout_alignParentRight="true"
            android:textColor="#4489c8"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section"
                   android:layout_alignParentLeft="true"
            android:textColor="#4489c8"
            
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pSection"
            android:text="Section"
            android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
            />

    </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:layout_alignParentLeft="true"
                    android:textColor="#4489c8"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pSemester"
                    android:text="Section"
                    android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
                    />

            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"     android:padding="14dp"  android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
                   android:layout_alignParentLeft="true"          android:textColor="#4489c8"
            
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pEmail"
            android:text="Email"
            android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:padding="14dp"
        android:background="#203f8acd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
                   android:layout_alignParentLeft="true"
            android:textColor="#4489c8"
            
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pPhoneNo"
            android:text="Phone Number"
            android:layout_alignParentRight="true"         android:textColor="#4489c8"         android:textStyle="bold"
            />



    </RelativeLayout>















</LinearLayout>


        </LinearLayout>
</ScrollView> <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navbar"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/empty"
        android:onClick="onClickintro"
        android:src="@drawable/pencil2"
        app:fabSize="normal" />

       <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/mainmenuui"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

</LinearLayout>